<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h1>{{msg}}</h1>
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Ticket</h5>
          <p id="single-ticket-id">
            <strong>ID</strong>: {{example.id}}</p>
          <p>
          <p>
            <strong>Department</strong>: {{example.department}}</p>
          <p>
          <p>
            <strong>Title</strong>: {{example.text}}</p>
          <p>
            <strong>Description:</strong> {{example.description}}</p>

          <form class="clearfix mb-4" action="PUT">
            <div class="form-group">
              <label for="note-input">Add a Note:</label>
              <textarea class="form-control" id="note-input" data-id="{{example.id}}" aria-describedby="note-input"
                placeholder="Please enter your notes here."></textarea>
              <button id="note-btn" class="btn btn-primary float-right">Submit</button>
            </div>
          </form>
          <p>
            <strong>Current Notes</strong>:
          </p>
          <p>
            {{#if example.notes}}
            {{example.notes}}
            {{else}}
            There are no notes to display.
            {{/if}}
          </p>
          <a href="/index">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>

</body>